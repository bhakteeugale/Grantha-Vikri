<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddStockFragment"
    android:orientation="vertical"
    >

    <include layout="@layout/subactionbar_card"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:paddingBottom="10sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:padding="10sp"
            >


            <TextView
                android:text="@string/type_spinner_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:id="@+id/radio_grp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                >

                <RadioButton
                    android:id="@+id/radio_book"
                    android:padding="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book"
                    android:textStyle = "bold"
                    android:checked="false"
                    />

                <RadioButton
                    android:id="@+id/radio_cd"
                    android:padding="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CD"
                    android:textStyle = "bold"/>

                <RadioButton
                    android:id="@+id/radio_frame"
                    android:padding="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frame"
                    android:textStyle = "bold"/>
            </RadioGroup>





            <LinearLayout
                android:id="@+id/form_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_marginTop="20sp"
                android:background="@drawable/custom_border"
                android:layout_marginBottom="20sp"
                android:visibility="gone"
                >

                <!--            for title and submit button-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Type"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"/>

                    <Button
                        android:id="@+id/submit_btn"
                        android:text="Submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/black"/>
                </RelativeLayout>


                <!--            for form which does not include group-->
                <LinearLayout
                    android:id="@+id/linearlayout_for_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Name (Required)"
                        android:layout_marginTop="10sp"
                        android:inputType="text"/>

                    <EditText
                        android:id="@+id/edit_printed_price"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Printed Price(Required)"
                        android:layout_marginTop="10sp"
                        android:inputType="numberDecimal"/>

                    <EditText
                        android:id="@+id/edit_discounted_price"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Discounted Price(Required)"
                        android:layout_marginTop="10sp"
                        android:inputType="numberDecimal"/>

                    <EditText
                        android:id="@+id/edit_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Quantity(Required)"
                        android:layout_marginTop="10sp"
                        android:inputType="number"/>

                    <EditText
                        android:id="@+id/edit_description"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:minLines="1"
                        android:maxLines="10"
                        android:scrollbars="vertical"
                        android:gravity="bottom|start"
                        android:hint="Description"
                        android:layout_marginTop="10sp"
                        android:inputType="textMultiLine"/>

                    <!--            Extra info for book -->
                    <LinearLayout
                        android:id="@+id/extra_info_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >

                        <EditText
                            android:id="@+id/book_nickname_edit"
                            android:hint="Nickname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10sp"/>

                        <EditText
                            android:id="@+id/book_edition_edit"
                            android:hint="Edition"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10sp"/>

                        <LinearLayout
                            android:id="@+id/layout_for_photo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10sp"
                            android:gravity="center_vertical">

                            <Button
                                android:id="@+id/upload_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Upload Cover Photo"
                                />

                            <TextView
                                android:id="@+id/title_photo"
                                android:text="No Photo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <!--           Extra info for frame -->

                    <EditText
                        android:id="@+id/edit_size"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Frame Size"
                        android:layout_marginTop="10sp"
                        android:inputType="number"
                        android:visibility="gone"/>

                </LinearLayout>





            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddGroupFragment">
    <include layout="@layout/subactionbar_card"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp">

            <EditText
                android:id="@+id/group_name_edit"
                android:hint="Group Name(Required)"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5sp"/>

            <EditText
                android:id="@+id/group_price_edit"
                android:hint="Group Price(Required)"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10sp"
                android:padding="5sp"
                android:inputType="numberDecimal"/>

        </LinearLayout>


        <include layout="@layout/req_spinners"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">



            <Button
                android:id="@+id/add_member_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Add Item"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="20sp" />


            <Button
                android:id="@+id/add_group_buttonn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Add group"
                android:textColor="@color/black"
                android:layout_margin="20sp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_grp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>



</LinearLayout>
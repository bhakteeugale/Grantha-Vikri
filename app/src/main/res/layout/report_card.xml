<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/report_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        >

        <TextView
            android:id="@+id/type_for_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="13sp"
            android:layout_marginLeft="5sp"/>

        <TextView
            android:id="@+id/report_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="18sp"
            android:layout_marginLeft="5sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_weight="1"
                android:id="@+id/information_grid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="10sp"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true"
                android:background="@drawable/new_border_3"
                android:padding="5sp"
                android:layout_marginRight="5sp">

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="Quantity taken for event"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/quantity_taken_for_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13sp"
                    />

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="Quantity Available"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/quantity_available_before_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13sp"
                    />

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="Quantity Sold"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/quantity_sold_after_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13sp"
                    />

            </GridLayout>

            <GridLayout
                android:layout_weight="1"
                android:id="@+id/information_grid_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="10sp"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true"
                android:padding="5sp">

                <TextView
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:text="Price Per Item(₹)"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/amount_of_each_report_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13sp"
                    />

                <TextView
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:text="Total Amount(₹)"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/total_amount_of_each_report_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13sp"
                    />

            </GridLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
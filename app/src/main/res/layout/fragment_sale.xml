<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SaleFragment">

    <include layout="@layout/subactionbar_card"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:layout_marginTop="15sp"
                android:gravity="end">

                <include layout="@layout/event_spinner_layout"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    app:cardElevation="5sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5sp"
                        android:background="@drawable/new_border2">

                        <LinearLayout
                            android:id="@+id/button_linearlayout_for_add_items"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/img_expand_add_items"
                                android:layout_width="28sp"
                                android:layout_height="25sp"
                                android:layout_margin="5sp"
                                android:background="@drawable/image_button_background"
                                android:src="@drawable/baseline_expand_more_24"
                                android:contentDescription="Expand" />

                            <TextView
                                android:textAlignment="textStart"
                                android:layout_gravity="start"
                                android:text="Add Items for Sale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/add_items_form"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <include layout="@layout/req_spinners"/>

                            <!--        quantity-->
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="8sp">
                                    <TextView
                                        android:text="Available Quantity "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:id="@+id/available_amount_for_sale_textview"
                                        android:text="0"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"/>
                                </LinearLayout>

                                <EditText
                                    android:id="@+id/sale_quantity"
                                    android:hint="Enter Quantity to be sold"
                                    android:textSize="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:inputType="number"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/border_color"/>
                            </LinearLayout>

                            <!--        amount and button-->
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20sp"
                                android:gravity="center_vertical">

                                <GridLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:rowCount="2"
                                    android:columnCount="2"
                                    android:orientation="horizontal"
                                    android:alignmentMode="alignMargins"
                                    android:layout_margin="8sp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginRight="25sp">

                                        <TextView
                                            android:text="Item Price (₹)"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/black"
                                            />

                                        <TextView
                                            android:text="Total Amount (₹)"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/black"
                                            />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginRight="5sp">
                                        <TextView
                                            android:id="@+id/amount_each_item"
                                            android:text="0"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/black"
                                            />

                                        <TextView
                                            android:id="@+id/total_amount"
                                            android:text="0"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/black"
                                            />

                                    </LinearLayout>


                                </GridLayout>

                            </LinearLayout>

                            <Button
                                android:id="@+id/sale_add_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="8sp"
                                android:text="Add Item"
                                android:textColor="@color/black"
                                android:layout_gravity="end"/>


                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    app:cardElevation="5sp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:background="@drawable/new_border2">

                        <LinearLayout
                            android:id="@+id/button_linearlayout_for_view_sale_items"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/img_expand_view_items"
                                android:layout_width="28sp"
                                android:layout_height="25sp"
                                android:layout_margin="5sp"
                                android:background="@drawable/image_button_background"
                                android:src="@drawable/baseline_expand_more_24"
                                android:contentDescription="Expand" />

                            <TextView
                                android:textAlignment="textStart"
                                android:layout_gravity="start"
                                android:text="View Sale Items"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/list_of_sale_items"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:visibility="gone">

                            <LinearLayout
                                android:padding="5sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/new_border2">

                            </LinearLayout>

                            <include layout="@layout/sell_items_cell_layout"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/list_of_sold_elements"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="right">

                                <TextView
                                    android:layout_weight="2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text = "Total (₹)"
                                    android:visibility="invisible"
                                    android:padding="5sp"/>

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text = "Total (₹)"
                                    android:visibility="invisible"
                                    android:padding="5sp"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text = "Total (₹)"
                                    android:visibility="invisible"
                                    android:padding="5sp"/>

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text = "Total (₹)"
                                    android:padding="5sp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_weight="1"
                                    android:id="@+id/current_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text = "0"
                                    android:padding="5sp"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    />

                            </LinearLayout>

                        </LinearLayout>




                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    app:cardElevation="5sp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_border2"
                        android:padding="5sp">

                        <LinearLayout
                            android:id="@+id/button_linearlayout_for_payment_section"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/img_expand_payment_section"
                                android:layout_width="28sp"
                                android:layout_height="25sp"
                                android:layout_margin="5sp"
                                android:background="@drawable/image_button_background"
                                android:src="@drawable/baseline_expand_more_24"
                                android:contentDescription="Expand" />

                            <TextView
                                android:textAlignment="textStart"
                                android:layout_gravity="start"
                                android:text="Payment Section"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:padding="10sp"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>

                        <!--                layout for confirm button and payment method-->
                        <LinearLayout
                            android:id="@+id/layout_for_payment_section"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:visibility="gone">

                            <!--layout for amount payable-->
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10sp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text = "Total Amount (₹)"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:id="@+id/sale_total_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text = "0"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="10sp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/new_border"
                                    >
                                    <Spinner
                                        android:id="@+id/payment_method_spinner"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:padding="8dp"
                                        />

                                </LinearLayout>

                                <Button
                                    android:id="@+id/confirm_sale_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginRight="5dp"
                                    android:textColor="@color/black"
                                    android:text="Confirm" />

                            </LinearLayout>




                        </LinearLayout>


                        <!--layout for upi photo-->
                        <LinearLayout
                            android:id="@+id/upi_photo_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="15dp"
                            android:visibility="gone">
                            <Button
                                android:id="@+id/upload_upi_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Upload UPI Photo"
                                />

                            <TextView
                                android:id="@+id/title_photo"
                                android:text="No Photo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>




                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>
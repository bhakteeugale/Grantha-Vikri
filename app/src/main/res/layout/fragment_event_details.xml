<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.EventDetailsFragment">

    <include layout="@layout/subactionbar_card"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp">

                <TextView
                    android:id="@+id/event_det_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="Event Name"
                    />

                <TextView
                    android:id="@+id/date_det_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Date " />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="10sp">

                <TextView
                    android:id="@+id/click_event_details_textview"
                    android:text="Event Details"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5sp" />

                <GridLayout
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:useDefaultMargins="true"
                    android:rowCount="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginTop="8sp">

                    <TextView
                        android:text="Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/event_det_name"
                        android:text="Gudhi Padwa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"/>

                    <TextView
                        android:text="Place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/event_det_place"
                        android:text="Pune"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"/>

                    <TextView
                        android:text="Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/event_det_date"
                        android:text="Pune"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"/>

                </GridLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp">

                <TextView
                    android:id="@+id/click_event_items_details_textview"
                    android:text="Event Item Details"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginBottom="5sp"
                    android:padding="5sp"/>

                <LinearLayout
                    android:id="@+id/display_items_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5sp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_border"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15sp">
                        <Spinner
                            android:id="@+id/type_of_item_spinner_event_det"
                            android:layout_width="wrap_content"
                            android:layout_height="50sp"
                            android:padding="8sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_inventory_items_details_event_det"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <include layout="@layout/inventory_cell_layout"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/inventory_items_in_event_event_det"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/view_group_items_details_event_det"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <include layout="@layout/group_cell_layout_event"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/group_items_in_event_event_det"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>





        </LinearLayout>
    </ScrollView>





</LinearLayout>